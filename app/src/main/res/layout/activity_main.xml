<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gnjoroge.ringthealarm.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="26dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp"
        card_view:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardBackgroundColor="#ff0000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ambulance"
                android:layout_width="170dp"
                android:layout_height="108dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_local_hospital_white_24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Ambulance"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/card_view1"
        android:layout_alignLeft="@+id/card_view1"
        android:layout_alignStart="@+id/card_view1"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#9dddd7">
        <!--android:layout_marginTop="26dp"-->
        <!--card_view:cardCornerRadius="10dp"-->
        <!--card_view:cardElevation="1dp"-->
        <!--card_view:layout_margin="5dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--app:cardBackgroundColor="#ff0000">-->

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/notify"
                android:layout_width="170dp"
                android:layout_height="108dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_person_pin_circle_black_24dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="I.C.E"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
